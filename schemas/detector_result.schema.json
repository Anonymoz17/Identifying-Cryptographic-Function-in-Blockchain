{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Detector Result",
  "type": "object",
  "description": "Canonical detector result schema used by runtime and documented in docs/pipeline.md",
  "oneOf": [
    { "required": ["path", "rule", "engine"] },
    { "required": ["id", "detector", "file_id", "relpath", "match", "confidence", "timestamp"] }
  ],
  "properties": {
    "id": { "type": "string" },
    "detector": { "type": "string" },
    "detector_version": { "type": "string" },
    "file_id": { "type": "string" },
    "path": { "type": "string" },
    "relpath": { "type": "string" },
    "offset": { "type": ["integer", "null"] },
    "rule": { "type": "string" },
    "rule_id": { "type": "string" },
    "rule_file": { "type": ["string", "null"] },
    "rule_namespace": { "type": ["string", "null"] },
    "match": { "type": "string" },
    "snippet": { "type": "string" },
    "range": {
      "type": "object",
      "properties": { "start": { "type": "integer" }, "end": { "type": "integer" } },
      "additionalProperties": false
    },
    "line": { "type": "integer" },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "metadata": { "type": "object", "additionalProperties": true },
    "meta": { "type": ["object", "null"], "additionalProperties": true },
    "tags": { "type": ["array", "null"], "items": { "type": "string" } },
    "evidence": { "type": "array", "items": { "type": "object" } },
    "provenance": { "type": "object", "additionalProperties": true },
    "timestamp": { "type": "string", "format": "date-time" },
    "engine": { "type": "string" }
  },
  "additionalProperties": true
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Detector Result",
  "type": "object",
  "required": ["path", "rule", "engine"],
  "properties": {
    "path": { "type": "string" },
    "offset": { "type": ["integer", "null"] },
    "rule": { "type": "string" },
    "engine": { "type": "string" },
    "confidence": { "type": ["number", "null"] },
    "tags": { "type": ["array", "null"], "items": { "type": "string" } },
    "meta": { "type": ["object", "null"] },
    "details": { "type": ["object", "null"] },
    "rule_file": { "type": ["string", "null"] },
    "rule_namespace": { "type": ["string", "null"] }
  },
  "additionalProperties": true
}
