{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest Entry",
  "type": "object",
  "required": [
    "id",
    "path",
    "relpath",
    "size",
    "mtime",
    "mtime_epoch",
    "sha256",
    "mime",
    "language",
    "is_binary"
  ],
  "properties": {
    "id": { "type": "string" },
    "path": { "type": "string" },
    "relpath": { "type": "string" },
    "size": { "type": "integer", "minimum": 0 },
    "mtime": {
      "type": ["string", "integer"],
      "description": "mtime as ISO8601 string or epoch seconds"
    },
    "mtime_epoch": { "type": "integer" },
    "sha256": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
    "mime": { "type": "string" },
    "language": { "type": "string" },
    "is_binary": { "type": "boolean" },
    "origin": { "type": "string" },
    "extra": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
